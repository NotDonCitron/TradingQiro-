# Telegram API Configuration
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# BingX API Configuration
# Get these from your BingX account
BINGX_API_KEY=your_bingx_api_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trading_bot

# Application Configuration
TRADING_ENABLED=false
BINGX_TESTNET=true
LOG_LEVEL=INFO
PORT=8080

# Optional: Log file path
# LOG_FILE=/var/log/trading-bot.log