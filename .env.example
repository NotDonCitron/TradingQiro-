# .env.example - Kopiere diese Datei zu .env und fülle deine Werte ein

# Database Configuration (In Produktion ändern!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=trading_bot

# Telegram API Configuration
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# BingX API Configuration
BINGX_API_KEY=your_bingx_api_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here

# Trading Configuration
TRADING_ENABLED=false
BINGX_TESTNET=true

# Monitoring Configuration
LOG_LEVEL=INFO

# Signal Source Configuration (Nur diese IDs werden überwacht!)
MONITORED_CHAT_IDS=-1002299206473,-1001804143400
VIP_GROUP_ID=-1002299206473
CRYPTET_CHANNEL_ID=-1001804143400
TARGET_GROUP_ID=-1002773853382
CRYPTET_ENABLED=true

# Port Configuration (für dynamische Port-Zuweisung)
DEFAULT_PORT=8080
METRICS_PORT=9090

# Browser Configuration (für Selenium)
CRYPTET_HEADLESS=true
CHROME_BINARY_PATH=/usr/bin/google-chrome

# Logging Configuration
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true

# Development Configuration
DEBUG_MODE=false
DEVELOPMENT=false