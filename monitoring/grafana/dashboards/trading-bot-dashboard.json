{
  "dashboard": {
    "id": null,
    "title": "Trading Bot - Performance & Health Dashboard",
    "tags": ["trading", "bot", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ðŸŽ¯ Trading Bot Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"trading-bot\"}",
            "legendFormat": "Bot Status"
          },
          {
            "expr": "telegram_connection_status",
            "legendFormat": "Telegram"
          },
          {
            "expr": "system_uptime_seconds",
            "legendFormat": "Uptime (s)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "ðŸ”´ DOWN"
                  },
                  "1": {
                    "text": "ðŸŸ¢ UP"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green", 
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "ðŸ“Š Signal Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(signals_processed_total[5m])",
            "legendFormat": "Signals/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Signals per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "âš¡ Signal Processing Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "signal_processing_duration_seconds",
            "legendFormat": "Processing Time (s)"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "1m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Signal Processing Latency",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "ðŸš¨ Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(signal_processing_errors_total[5m])",
            "legendFormat": "Signal Errors/sec"
          },
          {
            "expr": "rate(trading_errors_total[5m])",
            "legendFormat": "Trading Errors/sec"
          },
          {
            "expr": "rate(telegram_message_errors_total[5m])",
            "legendFormat": "Telegram Errors/sec"
          },
          {
            "expr": "rate(cryptet_scraping_errors_total[5m])",
            "legendFormat": "Cryptet Errors/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "ðŸ”„ Trading Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trading_operations_total{status=\"success\"}[5m])",
            "legendFormat": "Successful Trades/sec"
          },
          {
            "expr": "rate(trading_operations_total{status=\"error\"}[5m])",
            "legendFormat": "Failed Trades/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Operations per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 6,
        "title": "ðŸ“¡ Cryptet Signal Status",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - cryptet_last_signal_timestamp",
            "legendFormat": "Time since last signal (s)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1800
                },
                {
                  "color": "red",
                  "value": 3600
                }
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "ðŸ’¾ System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=\"trading-bot-production\"} / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)"
          },
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=\"trading-bot-production\"}[5m]) * 100",
            "legendFormat": "CPU Usage (%)"
          }
        ],
        "yAxes": [
          {
            "label": "Usage",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "ðŸ“ˆ Success Rate Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(signals_processed_total{status=\"success\"}[5m]) / rate(signals_processed_total[5m]) * 100",
            "legendFormat": "Signal Processing Success %"
          },
          {
            "expr": "rate(trading_operations_total{status=\"success\"}[5m]) / rate(trading_operations_total[5m]) * 100",
            "legendFormat": "Trading Success %"
          }
        ],
        "yAxes": [
          {
            "label": "Success Rate %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "links": [
      {
        "title": "Prometheus",
        "url": "http://localhost:9090",
        "type": "link"
      },
      {
        "title": "Alertmanager",
        "url": "http://localhost:9093",
        "type": "link"
      }
    ]
  }
}