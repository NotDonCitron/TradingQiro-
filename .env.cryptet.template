# Cryptet Automation Configuration Template
# Copy this to .env and fill in your values

# === EXISTING CONFIGURATION ===
# Telegram API credentials
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trading_bot

# BingX API (existing)
BINGX_API_KEY=your_bingx_api_key
BINGX_SECRET_KEY=your_bingx_secret_key
BINGX_TESTNET=true

# Trading settings
TRADING_ENABLED=false

# === NEW CRYPTET CONFIGURATION ===

# Cryptet Automation
CRYPTET_ENABLED=true
CRYPTET_COOKIES_FILE=cookies.txt
CRYPTET_HEADLESS=true
CRYPTET_DEFAULT_LEVERAGE=50
CRYPTET_MONITOR_INTERVAL=300

# Your own Telegram group where signals will be forwarded
OWN_GROUP_CHAT_ID=-1001234567890

# Logging
LOG_LEVEL=INFO

# === OPTIONAL CRYPTET SETTINGS ===

# Maximum monitoring duration for signals (in hours)
CRYPTET_MAX_MONITOR_HOURS=6

# Check interval for P&L updates (in seconds)
CRYPTET_CHECK_INTERVAL=300

# Browser settings
CRYPTET_BROWSER_TIMEOUT=10
CRYPTET_PAGE_LOAD_TIMEOUT=15

# Error handling
CRYPTET_MAX_RETRIES=3
CRYPTET_RETRY_DELAY=60